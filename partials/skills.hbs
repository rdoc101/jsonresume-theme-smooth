{{#if resume.skills.length}}
<section id="skills">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<h2>Skills</h2>
			{{#each resume.skills}}
			<div class="item">
				{{#if name}}
				<div class="name">
					{{name}}
				</div>
				{{/if}}
				{{#if level}}
				<div class="level">
					<em>{{level}}</em>
				</div>
				{{/if}}
				{{#if keywords.length}}
				<ul class="keywords">
					{{#each keywords}}
					<li>{{.}}</li>
					{{/each}}
				</ul>
				{{/if}}
			</div>
			{{/each}}
		</div>
	</div>
</section>
{{/if}}
