{{#if resume.work.length}}
<section id="work">
	<div class="row">
			<div class="col-md-8 offset-md-2">
			<h2>Work</h2>
			{{#each resume.work}}
			<div class="item">
				<div class="clearfix">
					{{#if company}}
					<h5 class="name">
						{{company}}
					</h5>
					{{/if}}
					<div class="date">
						{{#if startDate}}
						<span class="startDate">
							{{startDate}}
						</span>
						{{/if}}
						{{#if endDate}}
						<span class="endDate">
							- {{endDate}}
						</span>
						{{else}}
						<span class="endDate">
							- Present
						</span>
						{{/if}}
					</div>
				</div>
				<div class="clearfix">
					{{#if position}}
					<div class="position">
						{{position}}
					</div>
					{{/if}}
					{{#if website}}
					<div class="website">
						<a href="{{website}}">{{website}}</a>
					</div>
					{{/if}}
				</div>
				{{#if summary}}
				<div class="summary">
					<p>{{summary}}</p>
				</div>
				{{/if}}
				{{#if highlights.length}}
				<ul class="highlights">
					{{#each highlights}}
					<li>{{.}}</li>
					{{/each}}
				</ul>
				{{/if}}
			</div>
			{{/each}}
		</div>
	</div>
</section>
{{/if}}
